<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:id="@+id/occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/occupy"/>
    <EditText
        android:id="@+id/edit"
        android:hint="请填写ip"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line0"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/ip"
        android:text="ip"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:background="@drawable/circle_bead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line0"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/ack"
        android:text="修改"
        android:textColor="@color/mainColor"
        android:textSize="20dp"
        android:background="@drawable/circle_bead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line0"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/ack"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/pre"
        android:text="⏮"
        android:textSize="30dp"
        android:textColor="@color/secondaryColor"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/name"
        android:text="music"
        android:textColor="@color/secondaryColor"
        android:background="@drawable/circle_bead"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/next"
        android:text="⏭"
        android:textSize="30dp"
        android:textColor="@color/secondaryColor"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/RP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:qmui_background_color="@color/whiteMarble"
        app:qmui_progress_color="@color/fallsBlue"
        app:qmui_stroke_width="5dp"
        app:qmui_type="type_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.482"/>
    <TextView
        android:id="@+id/add"
        android:gravity="center"
        android:textSize="50dp"
        android:text="+"
        android:textColor="@color/secondaryColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RP"
        app:layout_constraintBottom_toTopOf="@+id/RP_num"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/RP_num"
        android:gravity="center"
        android:textSize="50dp"
        android:text="音量:0"
        android:textColor="@color/secondaryColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RP"
        app:layout_constraintBottom_toTopOf="@+id/RP"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.182"/>
    <TextView
        android:id="@+id/sub"
        android:gravity="center"
        android:textSize="50dp"
        android:text="-"
        android:textColor="@color/secondaryColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/RP_num"
        app:layout_constraintTop_toBottomOf="@+id/RP"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <ImageButton
        android:id="@+id/stop"
        android:src="@drawable/stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/RP"
        app:layout_constraintLeft_toLeftOf="@+id/RP"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
    <ImageButton
        android:id="@+id/begin"
        android:src="@drawable/begin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/RP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
    <ImageButton
        android:id="@+id/pause"
        android:src="@drawable/pause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/RP"
        app:layout_constraintRight_toRightOf="@+id/RP"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
</androidx.constraintlayout.widget.ConstraintLayout>